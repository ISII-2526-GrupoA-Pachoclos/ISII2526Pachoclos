            {
                if (user.Identity is not null && user.Identity.IsAuthenticated && user.IsInRole("User"))
                {
                    userName = user.Identity.Name;
                }
            }
        }
        */

        try
        {
            rep = await apiclient.GetDetallesReparacionAsync(ReparacionID);
        }
        catch (ApiException exception)
        {
            rep = null;
            error = $"Error al cargar la reparación con ID {ReparacionID}: {exception.Message}";
            StateHasChanged();
            return;
        }

        if (rep == null)
        {
            error = $"No existe una reparación con id={ReparacionID}";
        }
        /*
        else if (rep.Nombre != userName)
        {
            error = $"Error! No estás autorizado a ver esta reparación con id={ReparacionID}";
            rep = null;
        }
        */

        StateHasChanged();
    }
}