    */

    protected override async Task OnInitializedAsync()
    {
        // Si viene el ReparacionID por parámetro de la barra de busqueda, lo usamos
        if (ReparacionID > 0)
        {
            await BuscarReparacion();
        }
        else
        {
            error = "No se proporcionó un ID de reparación válido";
        }
    }

    private async Task BuscarReparacion()
    {
        error = "";
        rep = null;

        //we check the user is logged in
        /*
        string userName = "";
