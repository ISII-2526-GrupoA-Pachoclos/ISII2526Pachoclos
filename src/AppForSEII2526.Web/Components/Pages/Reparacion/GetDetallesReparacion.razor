            var user = authState?.User;

            //we retrieve the id of the user logged in
            if (user is not null)
            {
                if (user.Identity is not null && user.Identity.IsAuthenticated && user.IsInRole("User"))
                {
                    userName = user.Identity.Name;
                }
            }
        }
        */

        try
        {
            rep = await apiclient.GetDetallesReparacionAsync(filtroReparacionID);
        }
        catch (ApiException exception)
        {
            rep = null;
            error = $"Error al cargar la reparación con ID {filtroReparacionID}: {exception.Message}";
            StateHasChanged();
            return;
        }

        if (rep == null)
        {
            error = $"No existe una reparación con id={filtroReparacionID}";
        }
        /*
        else if (rep.Nombre != userName)
        {
            error = $"Error! No estás autorizado a ver esta reparación con id={filtroReparacionID}";
            rep = null;
        }
        */

        StateHasChanged();
    }
}