@using AppForSEII2526.Web.API

@page "/Reparacion/GetDetallesReparacion"

@using Microsoft.AspNetCore.Authorization
@inject AppForHerramientasAPIClient apiclient



<h3>GetDetallesHerramientasForReparar</h3>

@*@attribute [Authorize]*@

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">ID Reparación</span>
                <input type="number" id="inputReparacionID" @bind=filtroReparacionID class="form-control" placeholder="
                    Ingrese ID de Reparación" aria-label="ID Reparación" aria-describedby="basic-addon1">
                <button type="button" class="btn btn-primary" @onclick=@BuscarReparacion id="buscarReparacion">Buscar Reparación</button>
            </div>
        </div>
    </div>

    <div class="row alert alert-danger" role="alert" hidden="@string.IsNullOrEmpty(error)">
        <p id="ErrorsShown">@error</p>
    </div>
</div>

@if (rep == null && string.IsNullOrEmpty(error))
{
    <p>Ingrese un ID de reparación para buscar...</p>
}
else if (rep != null)
{
    <table class="table table-borderless table-sm">
        <tr>
            <th>Nombre y Apellidos</th>
            <td id="NameSurname">@rep.Nombre @rep.Apellido</td>
        </tr>
        <tr>
            <th>Fecha de Entrega</th>
            <td id="FechaEntrega">@rep.FechaEntrega.ToString("dd/MM/yyyy hh:mm:ss")</td>
        </tr>
        <tr>
            <th>Fecha de Recogida</th>
            <td id="FechaRecogida">@rep.FechaRecogida.DateTime.ToString("dd/MM/yyyy")</td>
        </tr>
    </table>


    <h4>Herramientas a Reparar</h4>
    <table class="table" id="HerramientasAReparar">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Descripcion</th>
                <th>Tiempo de Reparacion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ReparacionItemDTO item in rep.HerramientasAReparar)
            {
                <tr id="RentalItem_@item.NombreHerramienta">
                    <td>@item.NombreHerramienta</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Precio €</td>
                    <td>@item.Descripcion</td>
                    <td>@item.TiempoReparacion</td>
                </tr>
            }
        </tbody>
        <tfoot>
            @*colspan is used to state that TWO columns are collapsed*@
        <th scope="row" colspan="2" class="text-end">Precio Total</th>
        <td id="TotalPrice">@rep.PrecioTotal €</td>
        </tfoot>

    </table>
}

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public int ReparacionID { get; set; }

    private int filtroReparacionID { get; set; }
    private ReparacionDetalleDTO rep;
    private string error = "";

    /*
    [CascadingParameter]
    private Task<AuthenticationState>? authenticationState { get; set; }
    */

    protected override async Task OnInitializedAsync()
    {
        // Si viene el ReparacionID por parámetro de la barra de busqueda, lo usamos
        if (ReparacionID > 0)
        {
            filtroReparacionID = ReparacionID;
            await BuscarReparacion();
        }
    }

    private async Task BuscarReparacion()
    {
        error = "";
        rep = null;

        if (filtroReparacionID <= 0)
        {
            error = "Por favor ingrese un ID de reparación válido (mayor a 0)";
            return;
        }

        //we check the user is logged in
        /*
        string userName = "";
